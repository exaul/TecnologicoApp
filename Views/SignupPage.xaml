<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TecnologicoApp.Views.SignupPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
     xmlns:local="clr-namespace:TecnologicoApp.ViewModels"
    Title="Registro">
    <ContentPage.BindingContext>
        <local:SignupPageViewModel />
    </ContentPage.BindingContext>
    Title="RegistroPage">
    <ScrollView>
        <StackLayout VerticalOptions="Start">
            <Label
                Padding="35"
                FontSize="Large"
                HorizontalOptions="Center"
                Text="REGISTRO"
                TextColor="Black" />
            <!--  formulario  -->
                <StackLayout Padding="20">
                    <Label Text="Email" TextColor="Black" />
                    <Entry
                        x:Name="EmailEntry"
                        HorizontalOptions="StartAndExpand"
                        Keyboard="Email"
                        Text="{Binding Usuario.Email}"
                        TextColor="Black"
                        WidthRequest="333" />

                </StackLayout>
                <!--  ContraseÃ±a  -->
                <StackLayout Padding="20">
                    <Entry
                        x:Name="PasswordEntry"
                        HorizontalOptions="StartAndExpand"
                        IsPassword="True"
                        Text="{Binding Usuario.Password}"
                        TextColor="Black"
                        WidthRequest="333" />
                </StackLayout>
            </StackLayout>
                <Button
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>